# Variables de entorno para el servidor empresarial
# Archivo: web-scraping-service/.env.production

# Configuración del servidor
NODE_ENV=production
PORT=3000

# Configuración de CORS - Agregar tu dominio empresarial
ALLOWED_ORIGINS=https://tu-empresa.com,https://sfs-funnel.com,https://localhost

# Configuración de Rate Limiting para entorno empresarial
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Configuración de Puppeteer optimizada para servidor
PUPPETEER_HEADLESS=true
PUPPETEER_TIMEOUT=60000
MAX_BROWSER_INSTANCES=2
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage

# Configuración de logs para servidor empresarial
LOG_LEVEL=info
LOG_FILE_PATH=C:\inetpub\logs\LogFiles\web-scraping.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Configuración de memoria y rendimiento
MAX_OLD_SPACE_SIZE=2048
UV_THREADPOOL_SIZE=4

# Configuración de monitoreo
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
ENABLE_HEALTH_ENDPOINT=true

# Configuración de seguridad empresarial
HELMET_ENABLED=true
SECURITY_HEADERS_ENABLED=true
CORS_CREDENTIALS=true

# Timeout para requests de web scraping
REQUEST_TIMEOUT=120000
BROWSER_TIMEOUT=180000

# Pool de conexiones
MAX_CONCURRENT_REQUESTS=10
REQUEST_QUEUE_SIZE=50
